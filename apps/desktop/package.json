{
  "name": "@lms-notify/desktop",
  "version": "1.0.0",
  "description": "LMS Notify Desktop Application",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec pnpm run start",
    "start": "pnpm run build && electron-forge start",
    "package": "pnpm run build && electron-forge package",
    "make": "pnpm run build && electron-forge make",
    "prepare": "ts-patch install -s",
    "build:main": "tsc --project tsconfig.main.json",
    "build:inject": "node scripts/build-inject.js",
    "build": "pnpm build:main && pnpm build:inject"
  },
  "keywords": [],
  "author": "Ahmed Ghait <me@ahmedibrahim.dev>",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-dmg": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.0.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.9",
    "electron": "^40.0.0",
    "esbuild": "^0.27.3",
    "ts-patch": "^3.3.0",
    "typescript": "^5.9.3",
    "typescript-transform-paths": "^3.5.6"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "read-excel-file": "^6.0.3"
  },
  "packageManager": "pnpm@10.28.0"
}
