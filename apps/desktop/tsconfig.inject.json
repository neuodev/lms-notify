{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src/inject",
    "outDir": "./dist/inject",

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleDetection": null,

    "paths": {
      "@/*": ["./src/main/*"],
    },
  },
  "include": ["src/inject/**/*"],
  "exclude": ["node_modules"],
}
